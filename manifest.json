{
  "manifest_version": 2,

  "name": "Release Automation Permission Viewer",
  "description": "This extension shows Release Automation permission view and reporting",
  "version": "1.0.3",

  "browser_action": {
    "default_icon": "icon.png",
	"default_title":"Release Automation Permission Viewer"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui":{
	"page":"options.html",
	"chrome_style":true
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	"*://*/*",
	"tabs",
	"storage",
	"notifications"
  ]
}